{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "commonjs",
		"target": "esnext",
		"lib": [
			"esnext",
			"webworker"
		],
		"alwaysStrict": true,
		"strict": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"esModuleInterop": true
	},
	"include": [
		"./src/*.ts",
		"./src/**/*.ts",
		"./test/*.ts",
		"./test/**/*.ts",
	],
	"exclude": [
		"node_modules/",
		"dist/"
	]
}